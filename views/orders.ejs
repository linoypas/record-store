                <div class="order-info" order-id=<%=orders[i]._id%>>
                    <p class="orderid" order-id=<%=orders[i]._id%>>Order Number: <%=orders[i]._id%></p>
                    <p class="username" order-id=<%=orders[i]._id%>>User Name: <%=orders[i].username%></p>
                </div>
                <div id="update-order-container">
                    <button class="fa fa-trash update-order" id="delete-order" order-id=<%=orders[i]._id%>></button>
                    <button class="fa fa-pencil update-order" id="edit-order"  order-id=<%=orders[i]._id%>></button>
                    <button class="fa fa-caret-square-o-down update-order" id="details-order" order-id=<%=orders[i]._id%>></button>
                    <div class="details-section">
                        <h3>Orders Details</h3>
                        <p><strong>items: </strong></br></p>
                        <%for (let i = 0; i < orders[i].items[i]; i++) {%>
                            <button class="product"> <%=orders[i].items[i]%></button>
                        <%}%>  
                        <p><strong>total: </strong> <%=orders[i].totalAmount%></p>
                        <p><strong>Date:</strong>  <%=orders[i].orderDate%></p>
                    </div>  
