<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Store Locations Management</title>
    <link rel="stylesheet" href="../public/css/storeLocation.css">
</head>
<body>
    <%- include("./header", { showRecordDiv: true }); -%>

    <div id="container">

        <% if (isAdmin) { %>
            <div id="add-store-location">
                <h2>Create New Store Location</h2>
                <form action="/store-locations" method="POST">
                    <label for="name">Store Name:</label>
                    <input type="text" id="name" name="name" required><br><br>
                    
                    <label for="address">Address:</label>
                    <input type="text" id="address" name="address" required><br><br>

                    <label for="latitude">Latitude:</label>
                    <input type="text" id="latitude" name="latitude" required><br><br>

                    <label for="longitude">Longitude:</label>
                    <input type="text" id="longitude" name="longitude" required><br><br>

                    <button type="submit">Create Store</button>
                </form>
            </div>
        <div id="store-list">
            <% storeLocations.forEach(store => { %>
                <div class="store-item">
                    <h3><%= store.name %></h3>
                    <div class="store-info">
                        <p><%= store.address %></p>
                        <p>Latitude: <%= store.latitude %></p>
                        <p>Longitude: <%= store.longitude %></p>
                    </div>
                </div>
            <% }) %>
        </div>
        <% } else { %>
            <h2>You do not have the necessary permissions to access this page.</h2>
        <% } %>
    </div>
    <%- include("./footer"); -%>
</body>
</html>
