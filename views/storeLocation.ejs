<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Store Locations</title>
    <link rel="stylesheet" href="../public/css/storeLocation.css">
</head>
<body>
    <%- include("./header", { showRecordDiv: true }); -%>

    <div id="container">
        <h2>Manage Store Locations</h2>

        <!-- Create New Store Location Form -->
        <h3>Create New Store Location</h3>
        <form action="/store-locations" method="POST">
            <label for="name">Store Name:</label>
            <input type="text" id="name" name="name" required><br>

            <label for="address">Store Address:</label>
            <input type="text" id="address" name="address" required><br>

            <label for="latitude">Latitude:</label>
            <input type="number" step="any" id="latitude" name="latitude" required><br>

            <label for="longitude">Longitude:</label>
            <input type="number" step="any" id="longitude" name="longitude" required><br>

            <button type="submit">Create Store Location</button>
        </form>

        <!-- List of Store Locations with Delete Option -->
        <h3>Existing Store Locations</h3>
        <ul>
            <% storeLocations.forEach(store => { %>
                <li>
                    <strong><%= store.name %></strong><br>
                    <p><%= store.address %></p>
                    Latitude: <%= store.latitude %>, Longitude: <%= store.longitude %>
                    <form action="/store-locations/<%= store._id %>?_method=DELETE" method="POST">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>

    <%- include("./footer"); -%>
</body>
</html>
